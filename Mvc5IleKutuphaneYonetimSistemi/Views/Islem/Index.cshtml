@using Mvc5IleKutuphaneYonetimSistemi.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>İşlem  Numarası</th>
        <th>Kitap  Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üyenin İade Tarihi</th>

        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>



            <td>@item.ID</td>
            <td>@item.TblKitap.AD</td>
            <td>@item.TblUye.AD @item.TblUye.SOYAD </td>
            <td>@item.TblPersonel.PERSONEL</td>
            <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(@item.UYEGETIRDIGITARIH).ToString("dd/MM/yyyy")</td>


            <td>
                <a href="#" class="btn btn-primary">Detaylar</a>
            </td>


        </tr>

    }



</table>

