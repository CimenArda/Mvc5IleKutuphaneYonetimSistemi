@using Mvc5IleKutuphaneYonetimSistemi.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<table class="table table-bordered">

    <tr style="background-color:coral">
        <th>Yazar Numarası</th>
        <th>Yazar Adı</th>
        <th>Yazar SoyAdı</th>
        <th>Yazar Detayı</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>



            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>@item.DETAY</td>
            <td>
                <a href="/Yazar/YazarSil/@item.ID" onclick="return confirm('Silmek İstiyor Musunuz ?')" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Yazar/YazarGuncelle/@item.ID" class="btn btn-success">Güncelle</a>
            </td>

        </tr>

    }



</table>
<a href="/Yazar/YazarEkle" class="btn btn-primary">Ekle</a>

