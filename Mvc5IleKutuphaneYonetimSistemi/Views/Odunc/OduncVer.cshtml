
@model  Mvc5IleKutuphaneYonetimSistemi.Models.Entity.TblHareket

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Ödünç Verme</h2>

@using (@Html.BeginForm("OduncVer", "Odunc", FormMethod.Post))
{


    <div></div>

    <div style="margin-top:15px">

        <label>Üye Numarası</label>
        @*@Html.TextBoxFor(y => y.UYE, new { @class = "form-control" })*@

        @Html.DropDownListFor(k=>k.TblUye.ID,(List<SelectListItem>)ViewBag.deger1, new { @class = "form-control" })

    </div>


    <div style="margin-top:15px">

        <label>Kitap Numarası</label>
        @*@Html.TextBoxFor(y => y.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TblKitap.ID, (List<SelectListItem>)ViewBag.deger2, new { @class = "form-control" })


        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

    </div>


    <div style="margin-top:15px">

        <label>Personel Numarası</label>
        @*@Html.TextBoxFor(y => y.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TblPersonel.ID, (List<SelectListItem>)ViewBag.deger3, new { @class = "form-control" })

        @if (ViewBag.Error2 != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error2
            </div>
        }

    </div>


    <div style="margin-top:15px">

        <label>Kitap Alış Tarihi</label>

        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />

    </div>

    <div style="margin-top:15px">

        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />

    </div>

    <br />

    <button class="btn btn-success"> Kitap Ödünç Ver</button>

    <input type="hidden" value="false" name="ISLEMDURUM" />
}