@using Mvc5IleKutuphaneYonetimSistemi.Models.Entity

@model List<TblHareket>

@{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>İşlem  Numarası</th>
        <th>Kitap  Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>

        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
        {
    <tr>



        <td>@item.ID</td>
        <td>@item.TblKitap.AD</td>
        <td>@item.TblUye.AD @item.TblUye.SOYAD </td>
        <td>@item.TblPersonel.PERSONEL</td>
        <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd/MM/yyyy")</td>
        <td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd/MM/yyyy")</td>


        <td>
            <a href="/Odunc/IadeEt/@item.ID" class="btn btn-danger">Kitabı İade et</a>
        </td>


    </tr>

        }



</table>



